<% if action_name == "index" && current_user.admin? %>
  <div class="row collapse">
    <div class="two mobile-four columns">
      <%= link_to 'Create New Council', new_local_government_area_path,
            :class => "button expand prefix radius" %>
    </div>
    <div class="three mobile-hidden columns">
      <!-- spacer for button -->
    </div>
    <%= form_tag(search_path, :method => :get) do %>
      <div class="five mobile-three columns">
        <%= text_field_tag :filter, '', :placeholder => "Look up Title Reference" %>
      </div>
      <div class="two mobile-one columns">
        <%= submit_tag("Go", :class => "button expand postfix") %>
      </div>
    <% end %>
  </div>
<% end %>
