<% if action_name == "index" && current_user.admin? %>
  <div id="land-parcel-search" class="row collapse">
    <div class="two mobile-four columns">
      <%= link_to 'Create New Council', new_local_government_area_path,
            :class => "button expand prefix radius" %>
    </div>
    <div class="one mobile-hidden columns">
      <!-- spacer for button -->
    </div>
    <%= form_tag(search_path, :method => :get) do %>
      <div class="two mobile-one columns">
        <div href="#" class="button dropdown prefix expand">
          <span id="selected-search-type">Title Reference</span>
          <%= hidden_field_tag :search_type, "" %>
          <ul>
            <li class="search-option">
              <a href="#" class="search-option-label">Title Reference</a>
            </li>
            <li class="search-option">
              <a href="#" class="search-option-label">Address</a>
            </li>
          </ul>
        </div>
      </div>
      <div class="five mobile-three columns">
        <%= text_field_tag :filter, '', :placeholder => "Look up by Title Reference" %>
      </div>
      <div class="two mobile-one columns">
        <%= submit_tag("Go", :class => "button expand postfix") %>
      </div>
    <% end %>
  </div>
<% end %>
