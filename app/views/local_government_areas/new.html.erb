<div class="row">
  <div class="six columns centered">
    <%= form_for @local_government_area do |f| %>
      <%= f.error_messages %>
      <%= f.label :name %>
      <%= f.text_field :name %>
      <%= f.label :alias %>
      <%= f.text_field :alias, :placeholder => 'LGA name as it appears in the LPI file' %>
      <hr>
      <%= f.submit 'Create LGA' %>
    <% end %>
  </div>
</div>
