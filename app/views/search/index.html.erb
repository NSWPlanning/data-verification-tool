<div class="row">
  <div class="twelve columns">
    <h3>Land Title</h3>
    <% unless @land_title_to_records.blank? %>
    <ul>
      <% @land_title_to_records.each do |title, record, other| %>
      <li>
        <strong><%= title %></strong><br />

        <% if record.respond_to? :each %>
        <ul>
          <% record.each do |record| %>
          <li>
            <%= link_to record.title_reference,
                url_for(:controller => 'land_parcel_records',
                  :action => 'show',
                  :id => record.title_reference) %>
          </li>
          <% end %>
        </ul>
        <% else %>
          <%= link_to record.title_reference,
            url_for(:controller => 'land_parcel_records',
              :action => 'show',
              :id => record.title_reference) %>
        <% end %>
      </li>
      <% end %>
    </ul>
    <% else %>
      No results.
    <% end %>
  </div>
</div>


