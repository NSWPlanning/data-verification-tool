<div class="six columns">
  <div class="row">
    <div class="twelve columns">
      <h4><span class="indicator record-info"></span>Record Information</h4>
      <table>
        <thead>
          <th>Attribute</th>
          <th>Value</th>
        </thead>
        <tbody>

          <% if information.has_key? :council_file_date_of_update %>
          <tr>
            <td>Council File: Date of Update</td>
            <td><%= information[:council_file_date_of_update] %></td>
          </tr>
          <% end %>

          <% if information.has_key? :lpi_last_updated %>
          <tr>
            <td>LPI: Last Updated</td>
            <td><%= information[:lpi_last_updated] %></td>
          </tr>
          <% end %>

          <% if information.has_key? :council_id %>
          <tr>
            <td>Council ID</td>
            <td><%= information[:council_id] %></td>
          </tr>
          <% end %>

          <% if information.has_key? :cadid %>
          <tr>
            <td>CADID</td>
            <td><%= information[:cadid] %></td>
          </tr>
          <% end %>

          <% if information.has_key? :lots_in_strata_plan %>
          <tr>
            <td>Lots in Strata Plan</td>
            <td>
              <%= render :partial => 'list_of_plots', :locals => {
                :plots => information[:lots_in_strata_plan]
              } %>
            </td>
          </tr>
          <% end %>

        </tbody>
      </table>
    </div>
  </div>
</div>
